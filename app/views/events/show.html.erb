<div class="flex flex-col pb-3 border-b-1 border-b-gray-300 mb-4">
  <h2 class="font-semibold text-4xl mb-4">
    <%= @event.name %>
  </h2>
  <span class="text-xl text-gray-500">
    <%= price(@event) %>
  </span>
  <h3 class="text-gray-500 decorat">
    <em><%= day_and_time(@event) %> in <%= @event.location %></em>
  </h3>
  <p class="mt-4">
    <%= @event.description %>
  </p>
</div>
<div class="flex gap-x-2">
  <%= link_to "Edit", edit_event_path(@event), class: "rounded-sm bg-amber-400 px-2 py-1 text-medium font-semibold text-white shadow-xs hover:bg-amber-300" %>
  <%= link_to "Delete", event_path(@event), data: { turbo_method: :delete, turbo_confirm: "Really?" }, class: "rounded-sm bg-amber-400 px-2 py-1 text-medium font-semibold text-white shadow-xs hover:bg-amber-300" %>
</div>